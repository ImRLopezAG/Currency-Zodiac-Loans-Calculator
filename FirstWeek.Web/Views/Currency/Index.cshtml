@model Application.ViewModels.CurrencyVM
@{
  ViewData["Title"] = "Currensy Converter";
  var Result = Model.Result;
  var isNull = Model.IsNull;
  var message = Model.Message;
}
<h1>Currency converter</h1>

<div class="col-md-5">
  @if (isNull) {
    <div class="alert alert-danger" role="alert">
      @message
    </div>
  }
  <form method="post" asp-controller="Currency" asp-action="GetConvertion">

    <div class="input-group mb-3  bg-white text-dart">
      <select class="form-select d-inline" asp-for="FromCurrency" required>
        <option selected value="DOM">Currency</option>
        <option>DOM</option>
        <option>EUR</option>
        <option>USD</option>
      </select>
      <input type="number" step="0.01" class="form-control bg-white text-dark"
             placeholder="Amount" name="Amount" required>
    </div>
    <div class="input-group mb-3  bg-white text-dart">
      <select class="form-select d-inline" asp-for="ToCurrency" required>
        <option selected value="USD">To Currency</option>
        <option>DOM</option>
        <option>EUR</option>
        <option>USD</option>
      </select>
      @if (Result > 0) {
        <div class="form-control bg-white border-2  text-dark">
          <h6>$@Result.ToString("N2") @Model.ToCurrency</h6>
        </div>
      }
    </div>
    <button type="submit" class="btn btn-outline-info">Convert</button>
  </form>


</div>
