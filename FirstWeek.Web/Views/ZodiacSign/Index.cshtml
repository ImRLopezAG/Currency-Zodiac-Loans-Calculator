@model Application.ViewModels.ZodiacVM
@{
  ViewData["Title"] = "Zodiac Signs";
  string Sign = Model.Sign;
  var isNull = Model.IsNull;
  var message = Model.Message;
}

<h1>Zodiac Signs</h1>
<div class="col-md-5">
  @if (isNull)
  {
    <div class="alert alert-danger" role="alert">
      @message
    </div>
  }
  <form method="post" asp-controller="ZodiacSign" asp-action="GetZodiac">
    <div class="input-group mb-3  bg-white text-dart">
      <select class="form-select d-inline" asp-for="Month" id="month" required>
        <option selected value="January">Months</option>
      </select>
    </div>
    <div class="input-group mb-3  bg-white text-dart">
      <select class="form-select d-inline" asp-for="Day" id="day" required>
        <option selected value="1">Select a Day</option>
      </select>
      @if (Sign != null)
      {
        <div class="form-control bg-white border-2 text-dark" role="alert">
          <h6>@Sign</h6>
        </div>
      }
    </div>
    <button type="submit" class="btn btn-outline-info">Submit</button>
  </form>
</div>